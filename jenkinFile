pipeline {
    agent any

    environment {
        NODE_VERSION = '18.17.1' // Ensure Node.js version
    }

    tools {
        nodejs 'NodeJS' // Use Jenkins NodeJS Plugin
    }

    stages {
        stage('Clone Repository') {
            steps {
                git 'https://github.com/yourusername/your-repo.git'
            }
        }

        stage('Setup Node.js & Install Dependencies') {
            steps {
                bat 'where node || echo Node.js not found, please install it'
                bat 'npm install --force' // Installs all required dependencies
                bat 'npx playwright install --with-deps' // Installs Playwright browsers & dependencies
            }
        }

        stage('Run Playwright Tests') {
            steps {
                bat 'npx playwright test --reporter=line,allure-playwright' // Ensure Allure report is generated
            }
        }

        stage('Generate Allure Report') {
            steps {
                bat 'npx allure generate ./allure-results --clean -o ./allure-report'
            }
        }

        stage('Archive Allure Results') {
            steps {
                archiveArtifacts artifacts: 'allure-results/**', fingerprint: true
            }
        }

        stage('Publish Allure Report') {
            steps {
                allure([
                    results: [[path: 'allure-results']]
                ])
            }
        }
    }

    post {
        always {
            echo "Pipeline execution completed."
        }
    }
}
